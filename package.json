{
  "name": "peertube-plugin-upload-limits",
  "description": "Defining and checking upload limits with MediaInfo",
  "version": "0.4.1",
  "author": "kimsible",
  "license": "AGPL-3.0",
  "keywords": [
    "peertube",
    "plugin"
  ],
  "homepage": "https://github.com/kimsible/peertube-plugin-upload-limits",
  "bugs": "https://github.com/kimsible/peertube-plugin-upload-limits/issues",
  "engine": {
    "peertube": ">=2.2.0"
  },
  "library": "./main.js",
  "clientScripts": [
    {
      "script": "dist/common-client-plugin.js",
      "scopes": [
        "common"
      ]
    },
    {
      "script": "dist/mediainfo.js",
      "scopes": []
    }
  ],
  "css": [
    "helpers/client-helpers.css"
  ],
  "staticDirs": {
    "assets": "./dist/assets"
  },
  "translations": {
    "fr-FR": "./languages/fr.json",
    "pl-PL": "./languages/pl.json"
  },
  "dependencies": {
    "mediainfo.js": "^0.1.6"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "browser-env": "^3.3.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-livereload": "^2.0.5",
    "standard": "^16.0.3",
    "vite": "^2.5.3"
  },
  "scripts": {
    "test": "ava -v",
    "build": "vite build"
  },
  "ava": {
    "require": [
      "./test/_setup-browser-env.js"
    ],
    "files": [
      "./test/*.test.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && vite build"
    }
  },
  "lint-staged": {
    "*.js": "standard --fix"
  },
  "standard": {
    "globals": [
      "fetch",
      "WebAssembly",
      "Event",
      "MutationObserver",
      "HTMLElement",
      "MediaInfo"
    ]
  }
}
